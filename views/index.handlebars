<h1 class="title">Eat-Da-Burger!</h1>
<img class="burger-image" src="/assets/img/cartoon_burger_by_viperfan91.jpg">
<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Burgers Eaten</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
      
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <button type="submit" class="submit-button">Add Burger</button>
</form>
